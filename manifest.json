{
  "manifest_version": 3,
  "name": "Text Highlighter and Note Taker",
  "version": "1.0",
  "description": "Highlight text and save it as a note",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css", "pdf.min.js", "pdf.worker.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
